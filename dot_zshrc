#bindkey -e
# End of lines configured by zsh-newuser-install
# The following lines were added by compinstall
zstyle :compinstall filename '/home/neil/.zshrc'

autoload -Uz compinit
compinit
# End of lines added by compinstall
export PATH=$PATH:/home/neil/.local/bin

eval "$(oh-my-posh init zsh --config ~/.config/oh_my_posh/mytheme.omp.json)"

# yazi shell wrapper
function yz() {
	local tmp="$(mktemp -t "yazi-cwd.XXXXXX")"
	yazi "$@" --cwd-file="$tmp"
	if cwd="$(cat -- "$tmp")" && [ -n "$cwd" ] && [ "$cwd" != "$PWD" ]; then
		builtin cd -- "$cwd"
	fi
	rm -f -- "$tmp"
}

export EDITOR="vim"
export CLICOLOR_FORCE=1

alias ls='lsd'
alias ll='lsd -l'
alias la='lsd -al'
if [[ $TERM_PROGRAM == 'WezTerm' ]]; then
	alias imgcat='wezterm imgcat'
fi

eval "$(spotify_player generate zsh)"
eval "$(zoxide init zsh)"
eval "$(fzf --zsh)"
bindkey -v

# custom zsh key binding -> Ctrl + o to open yazi
bindkey -s '^o' 'yz^M'
#source /usr/share/zsh/plugins/zsh-vi-mode/zsh-vi-mode.plugin.zsh
